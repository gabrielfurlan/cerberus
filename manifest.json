{
  "manifest_version": 2,
  "name": "Cerberus Defense",
  "version": "0.2",
  "permissions": [
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "browsingData",
    "*://*.whatsapp.com/*",
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/"
      ],
      "js": [ 
        "inject.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "build/zapzap-app.js",
    "assets/*"
  ]
}
